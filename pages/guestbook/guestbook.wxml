<!--pages/user-guestbook/user-guestbook.wxml-->

<view class="weui-cells__title">留言内容</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
        <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入文本" bindinput="wheninput" style="height: 3.3em" />
            <view class="weui-textarea-counter">{{input_count}}/200</view>
        </view>
    </view>
</view>

<view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="submitGuestbook">提交留言</button>
</view>